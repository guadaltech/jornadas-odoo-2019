<odoo>
    <record id="ir_actions_report_jasper_server_parameter_form_view" model="ir.ui.view">
        <field name="name">ir.actions.report.jasper.server.parameter.form.view</field>
        <field name="model">ir.actions.report.jasper.report.parameter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="ir_action_report_jasper_server_id" invisible="1" />
                        <field name="name" />
                    </group>
                    <group>
                        <field name="expression" widget="ace" options="{'mode': 'python'}" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>